{
  "name": "luna-studio",
  "version": "1.0.0",
  "description": "Luna Studio",
  "homepage": "https://luna-lang.org",
  "repository": "https://github.com/luna",
  "main": "dist/web/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cp src/index.html dist/web/index.html && cp rsc dist/web -r && webpack",
    "build:native": "npm run build && electron-builder --mac --win --linux",
    "build:native-pack": "npm run build && electron-builder --mac --win --linux --dir",
    "start": "npm run build && webpack-dev-server",
    "start:web": "npm run build && webpack-dev-server --open",
    "open:native": "electron ."
  },
  "keywords": [
    "Luna Studio"
  ],
  "author": "Luna Team",
  "license": "AGPL-3.0-or-later",
  "build": {
    "appId": "org.luna-studio",
    "productName": "Luna Studio",
    "files": [
      "dist/web/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist/native"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "zip"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "bluebird": "^3.5.3",
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.3.2",
    "electron": "^3.0.8",
    "electron-builder": "^20.31.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {
    "keypress.js": "^2.1.5",
    "luna-basegl-ui": "^0.3.9",
    "luna-logger": "^0.1.1",
    "mixpanel-browser": "^2.23.0",
    "path": "^0.12.7",
    "setimmediate": "^1.0.5"
  }
}
